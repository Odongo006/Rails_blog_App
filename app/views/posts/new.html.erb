<div class = "post-form">
 <h3>Create New Post</h3>
  <%= form_with(model:  @post, url: user_posts_path, local: true) do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title, name: 'post[title]' %>
    <%= form.label :text %>
    <%= form.text_area :text, name: 'post[text]' %>
    <%= form.submit 'Create Post' %>
  <% end %>
</div>
